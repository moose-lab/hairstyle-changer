{
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth/[...all]"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "pnpm build",
  "outputDirectory": "dist/public",
  "installCommand": "pnpm install"
}
